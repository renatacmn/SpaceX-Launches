<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text -->

    <style name="TextBodyLight" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Button -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/custom_button_internal_padding</item>
        <item name="android:paddingEnd">@dimen/custom_button_internal_padding</item>
    </style>

    <style name="CustomButton.Blue">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_btn_blue</item>
    </style>

    <!-- list_item_launch -->
    <style name="TextLaunchName" parent="TextBodyLight">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/list_item_launch_name_text_size</item>
    </style>

    <style name="TextLaunchDate" parent="TextBodyLight">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/list_item_launch_date_text_size</item>
    </style>

    <!-- Launch status -->
    <style name="TextLaunchStatus" parent="TextBodyLight">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/list_item_launch_status_text_size</item>
    </style>

</resources>
